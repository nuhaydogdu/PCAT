<%- include ('partials/_header') %>

    <body>
        <div class="tm-page-wrap mx-auto">
            <div class="position-relative">

                <%- include ('partials/_navigation') %>

                    <div class="tm-welcome-container tm-fixed-header tm-fixed-header-1">
                        <div class="text-center">
                            <p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 text-white ">Video Catalog is brought to you by TemplateMo. </p>
                        </div>
                    </div>

                    <!-- header image -->
                    <div id=" tm-fixed-header-bg"></div>
            </div>

            <!-- page content -->
            <div class="container-fluid">
                <div class="mx-auto tm-content-container">
                    <main>
                        <div class="row mb-5 pb-4">
                            <div class="col-12">
                                <img src="<%- photo.image %>" alt="Image" class="img-fluid  tm-catalog-item-img">
                            </div>
                        </div>

                        <div class="row mb-5 pb-5">
                            <div class="col-xl-8 col-lg-7">
                                <!-- vidoe description -->
                                <div class="tm-video-description-box">
                                    <h2 class="mb-5 tm-video-title"> <%- photo.title %> </h2>
                                    <p class="mb-4"> <%- photo.description %></p>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-5">
                                <!-- share box -->
                                <div class="tm-bg-gray tm-share-box">
                                    <div class="text-center">
                                        <a href="/photos/edit/<%- photo._id %>" class="btn btn-primary p-0 mb-4 tm-btn tm-btn-animate tm-btn-download  tm-icon-download "> Update</a>
                                    </div>
                                    <div class="text-center">
                                        <!-- DELETE linkine tıklanıldığında /photos/<%- photo._id %> bu adrese delete isteğinde bulunmuş oluyoruz. -->
                                        <!-- bazı tarayıcılar put ve delete ti anlayamadığı için get'i delete gib sümüle ettik -->
                                        <!-- //methodOverride: put requesti post request şeklinde smüle edeceğiz -->
                                        <a href="/photos/<%- photo._id %>?_method=DELETE" class="btn btn-danger p-0 mb-4 tm-btn tm-btn-animate tm-btn-download  tm-icon-download"
                                            onclick="return confirm('ARE YOU SURE?')">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>

                    <%- include ('partials/_footer') %>
    </body>

    </html>